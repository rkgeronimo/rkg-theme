{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
                <div{% if user is empty %} id="no-required-user"{% endif %} class="article-body rkg-nopas">
                    <h1 class="article-h1">Nemaš pristup ovoj stranici!</h1>
                    <p>Postani član kako bi dobio pristup potpunom sadržaju.</p>
                    <p>
                        <button class="rkg-button rkg-login-show" href="{{ function('home_url') }}">Prijavi</button>
                        <a class="rkg-button" href="{{ function('home_url') }}">Početna stranica</a>
                        {#<a class="rkg-button">zatraži dopuštenje</a>#}
                    </p>
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}
