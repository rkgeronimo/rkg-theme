{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				<h1 class="article-h1">{{post.title}}</h1>
				<div class="article-body">
                    <div class="rkg-category-container">
                        <div class="rkg-news-category-select">
                            Kategorije&nbsp;<div class="rkg-news-category-select-arrow"></div>
                        </div>
                        <a class="rkg-news-category-link{% if (categorie_id == categorie.term_id) %} active{% endif %}" href="{{ function('home_url') }}/index.php?page_id=11" aria-current="page">Sve</a>
                        {% for categorie in categories %}
                            <a  class="rkg-news-category-link{% if (categorie_id == categorie.term_id) %} active{% endif %}" href="{{ function('home_url') }}/index.php?page_id=11&cat={{ categorie.term_id }}">{{ categorie.name }}</a>
                        {% endfor %}
                    </div>
                    <div class="row-container news-content-container">
                        <div class="row">
                            {% for new in news %}
                                <div class="news-block">
                                    <div class="col-3">
                                        <a class="news-block-item" href="{{ new.guid }}" style="background-image: url('{{ new.get_thumbnail.src }}');">
                                            <div class="news-block-category">{{ new.categories[0].name }}</div>
                                            <h4 class="news-block-title">{{ new.post_title }}</h4>
                                            <div class="news-block-date">{{ new.post_date|date("d.m.Y H:s") }}</div>
                                        </a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}
